{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "noImplicitOverride": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@prizm-ui/charts": ["libs/prizm/charts/src/index.ts"],
      "@prizm-ui/components": ["libs/components/src/index.ts"],
      "@prizm-ui/core": ["libs/prizm/core/src/index.ts"],
      "@prizm-ui/helpers": ["libs/helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
